<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="ReceiptContentBinding">
        <variable
            name="cost"
            type="String" />

    </data>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="11"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/p07_app_toolbar_receipt">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:id="@+id/info_fold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="주문자 정보"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:paddingTop="15dp"/>

                        <ImageView
                            android:id="@+id/info_arrow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_expand_less_24"
                            android:scaleType="fitEnd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="15dp"
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="홍길동"
                            android:textColor="@color/text"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="test@gmail.com"
                            android:textColor="@color/text"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="010-0000-0000"
                            android:textColor="@color/text"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="@color/buttondisable"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:id="@+id/order_info_fold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="주문 정보"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:paddingTop="15dp"/>

                        <ImageView
                            android:id="@+id/order_arrow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_expand_less_24"
                            android:scaleType="fitEnd"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/order_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="@color/buttondisable"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:id="@+id/purchase_info_fold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="결제 금액"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:paddingTop="15dp"/>

                        <ImageView
                            android:id="@+id/purchase_arrow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_expand_less_24"
                            android:scaleType="fitEnd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주문 금액"
                                android:textColor="@color/black"
                                android:textSize="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00000원"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:gravity="end"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="할인 금액"
                                android:textColor="@color/black"
                                android:textSize="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-0원"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:gravity="end"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_marginVertical="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="총 금액"
                                android:textColor="@color/black"
                                android:textSize="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00000원"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:gravity="end"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="@color/buttondisable"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:id="@+id/way_info_fold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="결제 수단"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:paddingTop="15dp"/>

                        <ImageView
                            android:id="@+id/way_arrow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_expand_less_24"
                            android:scaleType="fitEnd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:checked="true"
                            android:buttonTint="@color/hover"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카드결제"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/necessary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:buttonTint="@color/hover"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 개인정보 수집 및 이용 동의(필수)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:scaleType="fitEnd"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/complete"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="개인정보 수집 항목을 확인해주세요."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19dp"
            android:gravity="center"
            android:background="@drawable/p07_button"
            android:enabled="false"
            android:clickable="true"/>

    </LinearLayout>

</layout>

